<div class="container">
  <div class="reservations">
  <h2>I booked<br>those<span class="color-yellow"> games.</span></h2>
  <div>
    <% @my_bookings.each do |booking| %>
      <% if booking.status == "pending" || booking.status == "accepted" %>
        <div class="card-booking">
          <div>
            <% if booking.game.photo.attachment %>
            <%= cl_image_tag booking.game.photo.key,  height: 300, width: 200, crop: :fill %>
            <% end %>
          </div>
          <div class="p-4">
            <h3><%= booking.game.name %></h3>
            <p><%= booking.game.platform %></p>
            <p><strong>Owner:</strong> <%= booking.game.user.username %></p>
            <p><strong>Starting from:</strong> <%= booking.starting_date.strftime('%A %d %b %Y') %></p>
            <p><strong>Ending on:</strong> <%= booking.ending_date.strftime('%A %d %b %Y') %></p>
          </div>
          <p class="status">Status: <strong><%= booking.status %></p></strong>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
</div>

  <div class="white-background">
  <div class="container">
  <div class="locations">
  <h2>My games<br>currently<span class="color-yellow"> rented.</span></h2>
  <div>
    <% @my_locations.each do |booking| %>
      <% if booking.status == "pending" || booking.status == "accepted" %>
        <div class="card-booking">
          <div>
            <% if booking.game.photo.attachment %>
            <%= cl_image_tag booking.game.photo.key,  height: 300, width: 200, crop: :fill %>
            <% end %>
          </div>
          <div class="p-4">
            <h3><%= booking.game.name %></h3>
            <p><%= booking.game.platform %></p>
            <p><strong>Renter:</strong> <%= booking.user.username %></p>
            <p><strong>Starting from:</strong> <%= booking.starting_date.strftime('%A %d %b %Y') %></p>
            <p><strong>Ending on:</strong> <%= booking.ending_date.strftime('%A %d %b %Y') %></p>
          </div>
          <p class="status">Status: <strong><%= booking.status %></p></strong>
          <div class="booking-btns">
            <% if booking.status == "pending" %>
              <%= link_to "Accept", accepted_account_booking_path(booking), class:"btn-accepted", method: :patch %>
              <%= link_to "Decline", declined_account_booking_path(booking), class: "btn-declined", method: :patch %>
            <% end %>
          </div>
        </div>
      <%end%>
    <% end %>
  </div>
</div>
</div>
</div>

