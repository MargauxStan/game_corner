
<div class="container-form container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1580234811497-9df7fd2f357e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1047&q=80')">
  <div class="container">
    <h1>Book <%= @game.name %></h1>
  <%= simple_form_for [@game,@booking] do |f| %>
    <%= f.input :starting_date, as: :string, input_html: { id: "range_start" }  %>
    <%= f.input :ending_date, as: :string, input_html: { id: "range_end" }  %>
    <%= f.submit "Submit", class: "btn button-form-login" %>

  <% end %>
  <%= link_to 'Home', root_path %>
  </div>
</div>
