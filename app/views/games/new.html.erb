<div class="container-form container">

  <%= simple_form_for @game do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :platform %>
    <%= f.input :price %>
    <%= f.input :url_trailer %>
    <%= f.input :photo, as: :file %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Submit", class: "btn button-form" %>
    </div>

  <% end %>
</div>
