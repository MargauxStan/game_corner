<% if @game.photo.attachment %>
<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @game.photo.key %>')">
  <div class="container">
    <h1><%= @game.name %></h1>
    <h2><%= @game.platform %></h2>
  </div>
</div>
<% else %>
<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1580234811497-9df7fd2f357e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1047&q=80')">
<div class="container">
    <h1><%= @game.name %></h1>
    <h2><%= @game.platform %></h2>
  </div>
</div>
<% end %>

  <div class="container">
    <div class="card-product">
      <div class="p-4">
        <h3 class="mb-3"><%= @game.name %></h3>
        <h5 class="border-bottom"><%= @game.platform %></h5>
        <p class="pr-5 pt-3"><%= @game.description %></p>
        <h6 class="pr-5 pt-3">RENT<br>PLAY<br><span class="color-yellow">ENJOY!</span></h6>
      </div>

      <% if @game.user != current_user %>
      <p class="price"><%= @game.price %> â‚¬ / per day</p>
        <%= link_to 'Book this game', new_game_booking_path(@game), class:"btn-book2" %>
      <% end %>

      <%= link_to 'Add a review', new_game_review_path(@game), class:"btn-review" %>
</div>

    <% if @game.reviews.present? %>
      <div class="reviews">
        <h3 id="review-title">Reviews</h3>
        <% @game.reviews.each do |review| %>
          <div class="card-review">
            <p><%= review.content %></p>
            <p>
            <%review.rating.times do %>
                <i class="fas fa-star"></i>
            <% end %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

